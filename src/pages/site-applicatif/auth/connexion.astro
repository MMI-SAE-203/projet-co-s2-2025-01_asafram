    background: linear-gradient(
      135deg,
      oklch(61.48% 0.1505 53.25) 0%,
      oklch(82.98% 0.1049 64.61) 100%
    );
    box-shadow: inset 0 0 30px rgba(0, 0, 0, 0.1);
  }

  /* Animations pour les continents */
  @keyframes floatAnimation {
    0% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0.15;
    }
    33% {
      transform: translate(-5px, -3px) rotate(0.3deg);
      opacity: 0.2;
    }
    66% {
      transform: translate(4px, 2px) rotate(-0.3deg);
      opacity: 0.18;
    }
    100% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0.15;
    }
  }

  .continent-float {
    animation: floatAnimation 50s ease-in-out infinite;
    transition: all 0.5s ease;
    mix-blend-mode: soft-light;
    transform-origin: center center;
    filter: blur(1px);
  }

  /* Animation pour les boutons */
  button:hover {
    transform: translateY(-2px);
    transition: transform 0.2s ease;
  }

  /* Shadow pour le logo */
  .drop-shadow-lg {
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));
  }

  /* Animations */
