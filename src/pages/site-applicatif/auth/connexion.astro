---
import Logo from "../../../assets/icones/logo-asafram.webp";
import DegradeLandingPage from "../../../assets/fond/degrade-landingpage.svg";
import { registerUser, loginUser } from "../../../../backend/backend.js";
import SvgAsie from "../../../assets/icones/continent-asie.svg";
import SvgAfrique from "../../../assets/icones/continent-afrique.svg";
import SvgAmeriqueLatine from "../../../assets/icones/continent-ameriquelatine.svg";
import SvgMaghreb from "../../../assets/icones/continent-maghreb.svg";

import "../../../styles/global.css";

// Traitement du formulaire
let errorMessage = "";
let successMessage = "";
let activeTab = "login"; // Par défaut, on affiche l'onglet de connexion

// Vérifie si la requête est une soumission de formulaire
if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const action = formData.get("action");
    activeTab = action === "register" ? "register" : "login";

    // Traitement du formulaire de connexion
    if (action === "login") {
      const email = formData.get("email");
      const password = formData.get("password");

      if (!email || !password) {
        errorMessage = "Veuillez remplir tous les champs.";
      } else {
        try {
          // Tentative de connexion
          const authData = await loginUser(
            email.toString(),
            password.toString()
          );

          // Redirection vers la page d'accueil après connexion réussie
          return Astro.redirect("/site-applicatif");
        } catch (error) {
          errorMessage = "Identifiants incorrects. Veuillez réessayer.";
          console.error("Erreur de connexion:", error);
        }
      }
    }

    // Traitement du formulaire d'inscription
    else if (action === "register") {
      const username = formData.get("username");
      const email = formData.get("register-email");
      const password = formData.get("register-password");
      const confirmPassword = formData.get("confirm-password");

      if (!username || !email || !password || !confirmPassword) {
        errorMessage = "Veuillez remplir tous les champs.";
      } else if (password.toString() !== confirmPassword.toString()) {
        errorMessage = "Les mots de passe ne correspondent pas.";
      } else {
        try {
          // Création du compte utilisateur
          const userData = {
            username: username.toString(),
            email: email.toString(),
            password: password.toString(),
            passwordConfirm: confirmPassword.toString(),
            name: username.toString(),
          };

          const user = await registerUser(userData);
          successMessage =
            "Compte créé avec succès ! Vous pouvez maintenant vous connecter.";
          activeTab = "login"; // Basculer vers l'onglet de connexion après inscription réussie
        } catch (error) {
          errorMessage =
            "Erreur lors de la création du compte. L'email est peut-être déjà utilisé.";
          console.error("Erreur d'inscription:", error);
        }
      }
    }
  } catch (error) {
    errorMessage = "Une erreur s'est produite. Veuillez réessayer.";
    console.error(error);
  }
}
