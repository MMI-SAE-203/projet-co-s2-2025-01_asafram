<script>
  // Gestion des onglets
  document.addEventListener("DOMContentLoaded", () => {
    const loginTab = document.getElementById("login-tab");
    const registerTab = document.getElementById("register-tab");
    const loginForm = document.getElementById("login-form");
    const registerForm = document.getElementById("register-form");

    if (loginTab && registerTab && loginForm && registerForm) {
      loginTab.addEventListener("click", () => {
        // Activation de l'onglet connexion
        loginTab.classList.add("text-saumon", "border-b-2", "border-saumon");
        loginTab.setAttribute("aria-selected", "true");

        // Désactivation de l'onglet inscription
        registerTab.classList.remove(
          "text-saumon",
          "border-b-2",
          "border-saumon"
        );
        registerTab.classList.add("text-gray-500", "hover:text-gray-700");
        registerTab.setAttribute("aria-selected", "false");

        // Affichage du formulaire de connexion
        loginForm.classList.remove("hidden");
        loginForm.classList.add("block", "animate-fadeIn");

        // Masquage du formulaire d'inscription
        registerForm.classList.add("hidden");
        registerForm.classList.remove("block");
      });

      registerTab.addEventListener("click", () => {
        // Activation de l'onglet inscription
        registerTab.classList.add("text-saumon", "border-b-2", "border-saumon");
        registerTab.setAttribute("aria-selected", "true");

        // Désactivation de l'onglet connexion
        loginTab.classList.remove("text-saumon", "border-b-2", "border-saumon");
        loginTab.classList.add("text-gray-500", "hover:text-gray-700");
        loginTab.setAttribute("aria-selected", "false");

        // Affichage du formulaire d'inscription
        registerForm.classList.remove("hidden");
        registerForm.classList.add("block", "animate-fadeIn");

        // Masquage du formulaire de connexion
        loginForm.classList.add("hidden");
        loginForm.classList.remove("block");
      });
    }
  });

  // Afficher/masquer le mot de passe
  const togglePassword = document.getElementById("toggle-password");
  const passwordInput = document.getElementById("password");

  if (togglePassword && passwordInput) {
    togglePassword.addEventListener("click", () => {
      const type =
        passwordInput.getAttribute("type") === "password" ? "text" : "password";
      passwordInput.setAttribute("type", type);

      // Changer l'icône
      const svg = togglePassword.querySelector("svg");
      if (svg) {
        if (type === "password") {
          svg.innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />';
        } else {
          svg.innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />';
        }
      }
    });
  }

  // Pareil pour le formulaire d'inscription
  const toggleRegisterPassword = document.getElementById(
    "toggle-register-password"
  );
  const registerPasswordInput = document.getElementById("register-password");

  if (toggleRegisterPassword && registerPasswordInput) {
    toggleRegisterPassword.addEventListener("click", () => {
      const type =
        registerPasswordInput.getAttribute("type") === "password"
          ? "text"
          : "password";
      registerPasswordInput.setAttribute("type", type);

      // Changer l'icône
      const svg = toggleRegisterPassword.querySelector("svg");
      if (svg) {
        if (type === "password") {
          svg.innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />';
        } else {
          svg.innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />';
        }
      }
    });
  }

  // Force du mot de passe
  const registerPassword = document.getElementById("register-password");
  const strengthBars = [
    document.getElementById("pwd-strength-1"),
    document.getElementById("pwd-strength-2"),
    document.getElementById("pwd-strength-3"),
    document.getElementById("pwd-strength-4"),
  ];
  const strengthText = document.getElementById("pwd-strength-text");

  if (registerPassword && strengthBars.every((bar) => bar) && strengthText) {
    registerPassword.addEventListener("input", () => {
      const password =
        registerPassword instanceof HTMLInputElement
          ? registerPassword.value
          : "";
      let strength = 0;

      // Réinitialiser les barres
      strengthBars.forEach((bar) => {
        if (bar) {
          bar.className = "w-1/4 h-full bg-gray-200 rounded-full";
        }
      });

      // Vérifier la longueur
      if (password.length >= 8) strength++;

      // Vérifier la présence de lettres minuscules et majuscules
      if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength++;

      // Vérifier la présence de chiffres
      if (password.match(/\d/)) strength++;

      // Vérifier la présence de caractères spéciaux
      if (password.match(/[^a-zA-Z0-9]/)) strength++;

      // Mettre à jour les barres et le texte
      for (let i = 0; i < strength; i++) {
        const bar = strengthBars[i];
        if (bar) {
          if (i === 0) bar.classList.add("pwd-weak");
          if (i === 1) bar.classList.add("pwd-medium");
          if (i === 2) bar.classList.add("pwd-strong");
          if (i === 3) bar.classList.add("pwd-very-strong");
        }
      }

      switch (strength) {
        case 0:
          strengthText.textContent = "Utilisez au moins 8 caractères";
          strengthText.className = "text-xs text-gray-500 mt-1";
          break;
        case 1:
          strengthText.textContent = "Mot de passe faible";
          strengthText.className = "text-xs text-red-500 mt-1";
          break;
        case 2:
          strengthText.textContent = "Mot de passe moyen";
          strengthText.className = "text-xs text-amber-500 mt-1";
          break;
        case 3:
          strengthText.textContent = "Mot de passe fort";
          strengthText.className = "text-xs text-green-500 mt-1";
          break;
        case 4:
          strengthText.textContent = "Mot de passe très fort";
          strengthText.className = "text-xs text-emerald-700 mt-1";
          break;
      }
    });
  }

  // Animation des champs de formulaire
  const inputs = document.querySelectorAll(
    'input[type="text"], input[type="email"], input[type="password"]'
  );

  inputs.forEach((input) => {
    input.addEventListener("focus", () => {
      if (input.parentElement) {
        input.parentElement.classList.add(
          "scale-[1.02]",
          "transition-transform",
          "duration-200"
        );
      }
    });

    input.addEventListener("blur", () => {
      if (input.parentElement) {
        input.parentElement.classList.remove("scale-[1.02]");
      }
    });
  });
</script>
