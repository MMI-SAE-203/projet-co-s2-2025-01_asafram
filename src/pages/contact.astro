---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main class="font-sans min-h-screen bg-gray-50">
        <h1 class="text-3xl font-bold py-8 pt-20 text-center border-b shadow-sm bg-[#faf2dc]">
            Contact
        </h1>
        
        <div class="flex items-center justify-center px-6 py-12">
            <div class="w-full max-w-md">
                <section class="mb-8 bg-white rounded-lg shadow-md p-6 text-center">
                    <h2 class="text-xl font-semibold mb-4 text-gray-800">Nous contacter</h2>
                    <p class="text-gray-600 leading-relaxed">
                        Pour toute question ou demande d'information, vous pouvez
                        nous contacter en remplissant le formulaire ci-dessous.
                    </p>
                </section>

                <!-- Formulaire de contact -->
                <form class="bg-white rounded-lg shadow-md p-6 space-y-6">
                    <!-- Champ Nom -->
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                            Nom complet *
                        </label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                            placeholder="Votre nom complet"
                        />
                    </div>

                    <!-- Champ Email -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            Adresse email *
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                            placeholder="votre@email.com"
                        />
                    </div>

                    <!-- Champ Sujet -->
                    <div>
                        <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                            Sujet
                        </label>
                        <input
                            type="text"
                            id="subject"
                            name="subject"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                            placeholder="Objet de votre message"
                        />
                    </div>

                    <!-- Champ Message -->
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                            Message *
                        </label>
                        <textarea
                            id="message"
                            name="message"
                            rows="5"
                            required
                            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-vertical"
                            placeholder="Votre message..."
                        ></textarea>
                    </div>

                    <!-- Bouton d'envoi -->
                    <div>
                        <button
                            type="submit"
                            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors font-medium"
                        >
                            Envoyer le message
                        </button>
                    </div>

                    <!-- Note sur les champs obligatoires -->
                    <p class="text-xs text-gray-500 text-center">
                        * Champs obligatoires
                    </p>
                </form>
            </div>
        </div>
    </main>
</Layout>

<script>
   
    document.querySelector('form')?.addEventListener('submit', function(e) {
        e.preventDefault();
        

        const formData = new FormData(this);
        const data = {
            name: formData.get('name'),
            email: formData.get('email'),
            subject: formData.get('subject'),
            message: formData.get('message')
        };
        
        // Ici vous pouvez ajouter la logique d'envoi
        // Par exemple, envoyer à une API ou un service d'email
        console.log('Données du formulaire:', data);
        
        // Message de confirmation temporaire
        alert('Merci pour votre message ! Nous vous répondrons dans les plus brefs délais.');
        
        // Réinitialiser le formulaire
        this.reset();
    });
</script>