---
import Logo from "../assets/icones/logo-asafram.webp";
import IconeInstagram from "../assets/icones/instagram.svg";
import IconeFacebook from "../assets/icones/facebook.svg";
import IconeTikTok from "../assets/icones/tiktok.svg";
import IconeLinkedin from "../assets/icones/linkedin.svg";
import IconeDiscord from "../assets/icones/discord.svg";
---

<footer class="w-full bg-white border-t border-gray-300">
  <div class="max-w-7xl mx-auto px-4 py-12 hidden md:block">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="flex flex-col justify-center items-center gap-8 mr-10">
        <img src={Logo.src} alt="Logo ASAFRAM" class="w-32" />
        <div class="flex gap-8">
          <a href="#" class="hover:opacity-70 transition-opacity">
            <img src={IconeFacebook.src} alt="Facebook" class="w-6 h-6" />
          </a>
          <a href="#" class="hover:opacity-70 transition-opacity">
            <img src={IconeInstagram.src} alt="Instagram" class="w-6 h-6" />
          </a>
          <a href="#" class="hover:opacity-70 transition-opacity">
            <img src={IconeTikTok.src} alt="TikTok" class="w-6 h-6" />
          </a>
          <a href="#" class="hover:opacity-70 transition-opacity">
            <img src={IconeLinkedin.src} alt="LinkedIn" class="w-6 h-6" />
          </a>
          <a href="#" class="hover:opacity-70 transition-opacity">
            <img src={IconeDiscord.src} alt="Discord" class="w-6 h-6" />
          </a>
        </div>
        <div
          class="border border-black rounded-md px-3 py-1 flex items-center space-x-2 text-sm cursor-pointer hover:bg-gray-50 transition-colors"
        >
          <span>Français</span>
          <span class="text-xs">▼</span>
        </div>
      </div>

      <div class="pl-16">
        <h3 class="!text-xl mb-6 uppercase">Navigation</h3>
        <ul class="space-y-4">
          <li>
            <a href="/mission" class="hover:text-terre-cuite">Notre mission</a>
          </li>
          <li>
            <a href="/about" class="hover:text-terre-cuite">Qui sommes-nous ?</a
            >
          </li>
          <li>
            <a href="/partenaires" class="hover:text-terre-cuite"
              >Devenir Partenaire</a
            >
          </li>
          <li>
            <a href="/equipe" class="hover:text-terre-cuite">Notre équipe</a>
          </li>
          <li>
            <a href="/forum" class="hover:text-terre-cuite">Le forum ASAFRAM</a>
          </li>
        </ul>
      </div>

      <div class="pl-8">
        <h3 class="!text-xl font-bold mb-6 uppercase">Infos légales</h3>
        <ul class="space-y-4">
          <li>
            <a href="/confidentialite" class="hover:text-terre-cuite"
              >Confidentialité</a
            >
          </li>
          <li>
            <a href="/mentions-legales" class="hover:text-terre-cuite"
              >Mentions légales</a
            >
          </li>
          <li><a href="/cookies" class="hover:text-terre-cuite">Cookies</a></li>
          <li><a href="/cgv" class="hover:text-terre-cuite">CGV</a></li>
          <li><a href="/cgu" class="hover:text-terre-cuite">CGU</a></li>
        </ul>
      </div>

      <div>
        <h3 class="!text-xl font-bold mb-6 uppercase">Contact</h3>
        <ul class="space-y-4 mb-8">
          <li>
            <a href="/contact" class="hover:text-terre-cuite">Nous contacter</a>
          </li>
          <li>
            <a href="/inscription" class="hover:text-terre-cuite">S'inscrire</a>
          </li>
          <li><a href="tel:3630" class="hover:text-terre-cuite">36 30</a></li>
          <li>
            <a href="mailto:support@asafram.com" class="hover:text-terre-cuite"
              >support@asafram.com</a
            >
          </li>
        </ul>

        <div class="mt-6">
          <h4 class="text-lg font-semibold mb-2">Newsletter</h4>
          <p class="text-xs text-gray-600 mb-2">(1 email tous les mercredis)</p>
          <div class="flex gap-2">
            <input
              type="email"
              placeholder="Entrez votre email..."
              class="px-4 py-2 border border-black rounded-full text-sm w-full"
            />
            <button
              class="bg-black text-white px-6 py-2 rounded-full text-sm hover:opacity-90 transition-opacity"
            >
              OK
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200">
      <p class="text-sm text-gray-600">
        © 2025 ASAFRAM. Tous droits réservés. Les textes, images et autres
        contenus du site sont protégés par le droit d'auteur et ne peuvent être
        reproduits sans autorisation.
      </p>
    </div>
  </div>

  <div class="md:hidden px-5 py-8">
    <div class="relative mb-8">
      <div class="absolute top-2 right-0">
        <div
          class="border border-black rounded-md px-3 py-1 flex items-center space-x-2 text-sm cursor-pointer hover:bg-gray-50 transition-colors"
        >
          <span>Français</span>
          <span class="text-xs">▼</span>
        </div>
      </div>

      <div class="flex flex-col items-center">
        <div class="w-20 h-20 flex items-center justify-center">
          <img
            src={Logo.src}
            alt="Logo ASAFRAM"
            class="w-auto h-auto max-w-full max-h-full object-contain"
          />
        </div>
      </div>
    </div>

    <div class="flex justify-center gap-12 mb-12">
      <a
        href="#"
        class="hover:opacity-70 transition-opacity flex items-center justify-center w-6 h-6"
      >
        <img
          src={IconeFacebook.src}
          alt="Facebook"
          class="w-auto h-auto max-w-full max-h-full"
        />
      </a>
      <a
        href="#"
        class="hover:opacity-70 transition-opacity flex items-center justify-center w-6 h-6"
      >
        <img
          src={IconeTikTok.src}
          alt="TikTok"
          class="w-auto h-auto max-w-full max-h-full"
        />
      </a>
      <a
        href="#"
        class="hover:opacity-70 transition-opacity flex items-center justify-center w-6 h-6"
      >
        <img
          src={IconeLinkedin.src}
          alt="LinkedIn"
          class="w-auto h-auto max-w-full max-h-full"
        />
      </a>
      <a
        href="#"
        class="hover:opacity-70 transition-opacity flex items-center justify-center w-6 h-6"
      >
        <img
          src={IconeDiscord.src}
          alt="Discord"
          class="w-auto h-auto max-w-full max-h-full"
        />
      </a>
      <a
        href="#"
        class="hover:opacity-70 transition-opacity flex items-center justify-center w-6 h-6"
      >
        <img
          src={IconeInstagram.src}
          alt="Instagram"
          class="w-auto h-auto max-w-full max-h-full"
        />
      </a>
    </div>

    <div class="grid grid-cols-2 gap-6 mb-12">
      <div class="flex flex-col items-center">
        <h3
          class="font-bold mb-5 text-base border-b border-gray-200 pb-2 text-center uppercase"
        >
          Navigation
        </h3>
        <ul class="space-y-4 text-sm text-center w-full">
          <li>
            <a
              href="/mission"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >Notre mission</a
            >
          </li>
          <li>
            <a
              href="/about"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >Qui sommes-nous ?</a
            >
          </li>
          <li>
            <a
              href="/partenaires"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >Devenir Partenaire</a
            >
          </li>
          <li>
            <a
              href="/equipe"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >Notre équipe</a
            >
          </li>
          <li>
            <a
              href="/forum"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >Le forum ASAFRAM</a
            >
          </li>
        </ul>
      </div>

      <div class="flex flex-col items-center">
        <h3
          class="font-bold mb-5 text-base border-b border-gray-200 pb-2 text-center uppercase"
        >
          Infos légales
        </h3>
        <ul class="space-y-4 text-sm text-center w-full">
          <li>
            <a
              href="/confidentialite"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >Confidentialité</a
            >
          </li>
          <li>
            <a
              href="/mentions-legales"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >Mentions légales</a
            >
          </li>
          <li>
            <a
              href="/cookies"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >Cookies</a
            >
          </li>
          <li>
            <a
              href="/cgv"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >CGV</a
            >
          </li>
          <li>
            <a
              href="/cgu"
              class="hover:text-terre-cuite transition-colors duration-200 block"
              >CGU</a
            >
          </li>
        </ul>
      </div>
    </div>

    <div
      class="flex flex-col items-center mb-12 bg-gray-50 py-6 px-4 rounded-lg"
    >
      <h3
        class="font-bold mb-5 text-base border-b border-gray-200 pb-2 text-center uppercase"
      >
        Contact
      </h3>
      <div class="space-y-3 text-sm text-center">
        <p class="flex items-center justify-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          <a
            href="tel:3630"
            class="hover:text-terre-cuite transition-colors duration-200"
            >36 30</a
          >
        </p>
        <p class="flex items-center justify-center gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          <a
            href="mailto:support@asafram.com"
            class="hover:text-terre-cuite transition-colors duration-200"
            >support@asafram.com</a
          >
        </p>
      </div>
    </div>

    <div class="text-center mb-10 bg-gray-50 py-6 px-4 rounded-lg">
      <h4 class="font-semibold mb-2 text-base">Newsletter</h4>
      <p class="text-xs mb-4 text-gray-600">(1 email tous les mercredis)</p>
      <div class="flex justify-center mx-auto">
        <div class="flex w-full max-w-xs">
          <input
            type="email"
            placeholder="Entrez votre email..."
            class="px-4 py-2 border border-black rounded-l-full text-xs w-full focus:outline-none focus:ring-1 focus:ring-terre-cuite"
          />
          <button
            class="bg-black text-white px-5 py-2 rounded-r-full text-xs -ml-1 hover:bg-gray-800 transition-colors duration-200 shadow-md"
          >
            OK
          </button>
        </div>
      </div>
    </div>

    <div class="mt-10 border-t border-gray-200 pt-6">
      <p class="text-xs text-center text-gray-600 leading-relaxed px-2">
        © 2025 ASAFRAM. Tous droits réservés. Les textes, images et autres
        contenus du site sont protégés par le droit d'auteur et ne peuvent être
        reproduits sans autorisation.
      </p>
    </div>
  </div>
</footer>
