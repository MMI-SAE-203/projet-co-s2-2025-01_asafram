---
const {
  titre,
  description,
  icone,
  prix,
  btnText,
  features = [],
  bgColor = "bg-white",
  titleColor = "text-terre-cuite",
  textColor = "text-gris",
  labelColor = "text-black",
  iconBgColor = "bg-saumon",
  btnBgColor = "bg-terre-cuite",
  btnTextColor = "text-white",
  fillIcone = "fill-current",
  checkColor = "",
  crossColor = "",
} = Astro.props;
import iconCheck from "../assets/icones/icone-check.svg";
import iconCroix from "../assets/icones/icone-croix.svg";
---

<div
  class={`mx-2 p-10 ${bgColor} rounded-3xl shadow-lg border border-transparent transition-all duration-300 hover:shadow-xl`}
>
  <div class="flex gap-4 w-full">
    <div
      class={`flex justify-between items-center ${iconBgColor} rounded-2xl p-3 mb-3 w-16`}
    >
      <img src={icone.src} alt=`icone de la carte ${titre}` class="w-12" />
    </div>
    <div>
      <p class={`${textColor} text-xs`}>Pour les boutiques</p>
      <p class={`${titleColor} font-bold text-xl`}>{titre}</p>
    </div>
  </div>
  <p class={`text-sm ${textColor}`}>{description}</p>
  <p class={`my-6 ${titleColor} font-bold`}>{prix}</p>
  <div>
    <p class={`text-sm font-bold ${titleColor} mb-4`}>Avantages</p>
    <ul class="mt-3 space-y-2">
      {
        features.map((f: { label: string; included: boolean }) => (
          <li class="flex items-start gap-2 text-sm">
            {f.included ? (
              <div class={checkColor}>
                <img src={iconCheck.src} alt="Icone check" class={fillIcone} />
              </div>
            ) : (
              <div class={crossColor}>
                <img src={iconCroix.src} alt="Icone non inclus" />
              </div>
            )}
            <span
              class={f.included ? labelColor : "line-through text-gray-400"}
            >
              {f.label}
            </span>
          </li>
        ))
      }
    </ul>
  </div>
  <div class="position-center mt-8">
    <a
      href=""
      class={`${btnBgColor} ${btnTextColor} px-24 py-4 rounded-4xl uppercase transition-all duration-300 hover:opacity-90 font-bold`}
      >{btnText}</a
    >
  </div>
</div>
