---
import Layout from "./Layout.astro";
import DegradeLandingPage from "../assets/fond/degrade-landingpage.svg";
const { title, description, src, alt, classContent = "" } = Astro.props;
---

<Layout title={title} description={description}>
  <section
    class="relative w-full h-[550px] lg:h-[1024px] overflow-hidden mt-20 bg-background"
  >
    <div class="absolute inset-0 w-full h-full z-0">
      <img
        src={DegradeLandingPage.src}
        alt=""
        class="w-full h-full object-cover"
      />
    </div>
    <header>
      <h1 class="mt-36 lg:mt-[425px]">{title}</h1>
    </header>
    <img
      src={src.src}
      alt={alt}
      class="absolute inset-0 w-full h-full object-cover object-center z-0 mx-auto max-w-[1900px]"
      loading="eager"
    />
  </section>
  <div class={classContent}>
    <slot name="content" />
  </div>
</Layout>
